{
  "manifest_version": 3,
  "name": "Contexta - YouTube Spanish Learning",
  "version": "0.1.0",
  "description": "Learn Spanish through YouTube videos with dual subtitles, interactive quizzes, and AI-powered features",
  "permissions": ["storage", "tts", "scripting", "activeTab"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://translate.googleapis.com/*",
    "https://api.mymemory.translated.net/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "src/utils/constants.js",
        "src/utils/storage.js",
        "src/utils/translation.js",
        "src/content/subtitle-parser.js",
        "src/content/ui-injector.js",
        "src/content/quiz-manager.js",
        "src/content/content-script.js"
      ],
      "css": ["src/styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Contexta - Spanish Learning",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "commands": {
    "toggle-subtitles": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Toggle dual subtitles on/off"
    },
    "trigger-quiz": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Trigger a quiz"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["src/styles/*.css", "src/utils/*.js", "data/*.json"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
