{
  "name": "contexta",
  "version": "0.1.0",
  "description": "Chrome extension for contextual language learning through YouTube videos",
  "main": "manifest.json",
  "scripts": {
    "check-icons": "node scripts/generate-icons.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "test": "echo 'Test framework to be added (Jest recommended)'",
    "validate": "npm run format:check && npm run lint && npm run check-icons",
    "prepare": "npm run check-icons"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmanhype/contexta.git"
  },
  "keywords": [
    "chrome-extension",
    "language-learning",
    "spanish",
    "youtube",
    "education",
    "subtitles",
    "translation",
    "ai"
  ],
  "author": "Contexta Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmanhype/contexta/issues"
  },
  "homepage": "https://github.com/jmanhype/contexta#readme",
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
