{
  "name": "contexta",
  "version": "0.1.0",
  "description": "Chrome extension for contextual language learning through YouTube videos",
  "main": "manifest.json",
  "scripts": {
    "build": "node scripts/build.js",
    "watch": "node scripts/watch.js",
    "dev": "npm run watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "jest",
    "zip": "node scripts/zip.js",
    "load": "echo 'Load the dist/ folder as an unpacked extension in Chrome://extensions with Developer mode enabled'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmanhype/contexta.git"
  },
  "keywords": [
    "chrome-extension",
    "language-learning",
    "spanish",
    "youtube",
    "education",
    "subtitles",
    "translation",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmanhype/contexta/issues"
  },
  "homepage": "https://github.com/jmanhype/contexta#readme",
  "devDependencies": {
    "archiver": "^6.0.0",
    "chokidar": "^3.5.0",
    "eslint": "^8.0.0",
    "fs-extra": "^11.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "sharp": "^0.34.4"
  }
}
